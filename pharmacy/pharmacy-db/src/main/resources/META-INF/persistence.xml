<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="PharmacyUnit" transaction-type="JTA">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <jta-data-source>pharmacy</jta-data-source>
        <class>com.pharmacy.article.Article</class>
        <class>com.pharmacy.article.Pharmacy</class>
        <class>com.pharmacy.article.Price</class>
        <class>com.pharmacy.category.Category</class>
        <class>com.pharmacy.csv.CSVFormat</class>
        <class>com.pharmacy.evaluation.Evaluation</class>
        <class>com.pharmacy.user.Address</class>
        <class>com.pharmacy.user.User</class>
        <class>com.pharmacy.wishlist.Wishlist</class>
        <class>com.pharmacy.user.UserRole</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <properties>
            <property name="eclipselink.persistence-context.flush-mode" value="commit" />
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        </properties>
    </persistence-unit>
</persistence>
